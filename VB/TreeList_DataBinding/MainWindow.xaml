<Window
    x:Class="TreeList_DataBinding.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="350" Width="525">
    <Grid>
        <dxg:TreeListControl Name="treeList">
            <dxg:TreeListControl.Columns>
                <dxg:TreeListColumn FieldName="Name" Header="Employee Name" />
                <dxg:TreeListColumn FieldName="Position" />
                <dxg:TreeListColumn FieldName="Department" />
            </dxg:TreeListControl.Columns>
            <dxg:TreeListControl.View>
                <dxg:TreeListView Name="treeListView1" AutoWidth="True"
                                  KeyFieldName="ID" ParentFieldName="ParentID" />
            </dxg:TreeListControl.View>
        </dxg:TreeListControl>
    </Grid>
</Window>
